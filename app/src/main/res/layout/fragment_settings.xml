<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/AccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/accountInfoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Account Information"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AccountText"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical" />

        <Button
            android:id="@+id/friendsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Friends"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountInfoButton"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical" />

        <TextView
            android:id="@+id/deviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendsButton"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/notificationsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Notifications"
            android:textColor="#4E4E4E"
            android:textColorHint="#4E4E4E"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/deviceText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical"
            android:drawableTint="#4E4E4E" />

        <Button
            android:id="@+id/appearanceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Appearance"
            android:textColor="#4E4E4E"
            android:textColorHint="#4E4E4E"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationsButton"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical"
            android:drawableTint="#4E4E4E" />

        <TextView
            android:id="@+id/generalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appearanceButton"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="About"
            android:textColor="#4E4E4E"
            android:textColorHint="#4E4E4E"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generalText"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical"
            android:drawableTint="#4E4E4E" />

        <Button
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Help"
            android:textColor="#4E4E4E"
            android:textColorHint="#4E4E4E"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutButton"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical"
            android:drawableTint="#4E4E4E" />

        <Button
            android:id="@+id/privacyPolicyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Privacy Policy"
            android:textColor="#4E4E4E"
            android:textColorHint="#4E4E4E"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/helpButton"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical"
            android:drawableTint="#4E4E4E" />

        <Button
            android:id="@+id/termsConditionsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Terms &amp; Conditions"
            android:textColor="#4E4E4E"
            android:textColorHint="#4E4E4E"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacyPolicyButton"
            style="@style/Button.Grey"
            android:drawableRight="@drawable/caret_right_white_icon"
            android:gravity="start|center_vertical"
            android:drawableTint="#4E4E4E" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/round_edittext"
            android:text="Log Out"
            android:textColor="#FF0000"
            android:textColorHint="#FF0000"
            android:textSize="@dimen/editTextSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termsConditionsButton"
            style="@style/Button.Grey"
            android:gravity="start|center_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>